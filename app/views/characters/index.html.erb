<p id="notice"><%= notice %></p>

<h1>Listing Characters</h1>

<% if user_signed_in? %>
  <p><%= link_to 'New Character', new_character_path %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Height(cm)</th>
      <th>Weight(lb)</th>
      <th>Lifespan(yr)</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.address %></td>
        <td><%= character.height %></td>
        <td><%= character.weight %></td>
        <td><%= character.lifespan %></td>
        <td><%= character.race %></td>
        <td><%= link_to 'Show', character %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_character_path(character) %></td>
          <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
