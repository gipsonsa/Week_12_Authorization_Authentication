<%= form_for(@character) do |f| %>
  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

      <ul>
      <% @character.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :height, "Height (cm)" %><br>
    <%= f.number_field :height, :in => 1..9999999999, :step => 1 %>
  </div>
  <div class="field">
    <%= f.label :weight, "Weight (lb)" %><br>
    <%= f.number_field :weight, :in => 1..9999999999, :step => 1 %>
  </div>
  <div class="field">
    <%= f.label :lifespan, "Lifespan (yr)" %><br>
    <%= f.number_field :lifespan, :in => 1..9999999999, :step => 1 %>
  </div>
  <div class="field">
    <%= f.label :race %><br>
    <%= f.select :race, options_for_select(['Human', 'Elf', 'Dwarf', 'Hobbit', 'Balrog', 'Giant', 'Orc', 'Goblin', 'Troll', 'Dragon', 'Ent', 'Wraith', 'Ogre', 'Uruk-hai', 'Warg', 'Great Eagles', 'Long-worms', ]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
